
.feed-item-container(data-model="visualization", data-model-id="#{vid}")
    .feed-item

    .description-container
        .description

        .description-editor
            textarea


    .bottom-container
        .edit-description
            a(href="#")
                | add description


        .permalink
            ul(data-dropit).menu
                li
                    a(href="#")
                        | Actions
                    ul
                        li
                            a(href="/visualizations/#{vid}/data")
                                | Raw Data
                        li
                            a(href="/visualizations/#{vid}/screenshot?width=1024&height=768")
                                | Take Screenshot
                        li
                            a(href="/visualizations/#{vid}", data-attribute="permalink")
                                | Internal Permalink
                        li
                            a(href="/visualizations/#{vid}/public")
                                | Public Permalink
                        li
                            a(href="/visualizations/#{vid}/iframe")
                                | Iframe Link
                        li
                            a(href="/visualizations/#{vid}/pym")
                                | Pym enabled iframe Link
                        li
                            a(href="/visualizations/#{vid}/delete", data-confirm="Are you sure you want to delete this visualization?")
                                | Delete

