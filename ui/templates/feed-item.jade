
.feed-item-container(data-model="visualization", data-model-id="#{vid}")
    .feed-item

    .description-container
        .description

        .description-editor
            textarea


    .bottom-container
        .edit-description
            a(href="#")
                | add description


        .permalink
            ul(data-dropit).menu
                li
                    a(href="#")
                        | Actions
                    ul
                        li
                            a(href="/visualizations/#{viz.id}", data-attribute="permalink")
                                | Internal Permalink
                        li
                            a(href="/visualizations/#{viz.id}/public", data-attribute="permalink")
                                | Public Permalink
                        li
                            a(href="/visualizations/#{viz.id}/iframe", data-attribute="permalink")
                                | Iframe Link
                        li
                            a(href="/visualizations/#{viz.id}/pym", data-attribute="permalink")
                                | Pym enabled iframe Link
                        li
                            a(href="/visualizations/#{viz.id}/delete", data-confirm="Are you sure you want to delete this visualization?")
                                | Delete

