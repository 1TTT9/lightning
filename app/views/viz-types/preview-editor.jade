extends ../layout

block dynamic-css
    style#viz-styles.
        #{css}

block container

    .editor-outer-section.wrap.push
        .editor-inner-section
            .top-matter
                .info-container
                    a(href="#{BASE_URL}visualization-types/")
                        | &larr; back

                .title-container
                    h1
                        | #{utils.titleCase(vizType.name)}

                .action-container
                    a(href="#import-visualization-modal", rel="modal:open")
                        .button
                            | Import



    #editor-component
                    
            
    .saved
        | Saved!
    .problem-saving
        | Problem Saving...


block scripts
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script.
        !{javascript}
    script.
        window.lightning = window.lightning || {};
        window.lightning.editor = {
            datasets: !{JSON.stringify(vizType.sampleData)},
            name: "#{vizType.name}",
            location: "#{location}",
            source: "#{source}",
            url: "#{url}",
            path: "#{path}"
        };
    script(src='#{STATIC_URL}js/preview.js')

