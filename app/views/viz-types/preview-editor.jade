extends ../layout

block dynamic-css
    style#viz-styles.
        #{css}

block container

    .editor-container.push.wrap
        .top-matter           
            .meta
                h2
                    | #{vizType.name}
                .subheader
                    a(href="#{BASE_URL}visualization-types/")
                        | &larr; back

                .action-container
                    a(href="#")#import-button
                        .button
                            | Import

        #editor-component
                    
            
    .saved
        | Saved!
    .problem-saving
        | Problem Saving...



block scripts
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='#{STATIC_URL}js/basic.js')
    script.
        !{javascript}
    script.
        window.lightning = window.lightning || {};
        window.lightning.editor = {
            datasets: !{JSON.stringify(vizType.sampleData)},
            name: "#{vizType.name}"
        };
    script(src='#{STATIC_URL}js/editor.js')

