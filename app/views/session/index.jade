extends ../layout


block content
    .row
        .one-third.column
            h2
                | Saved Sessions

    .row
        .two-thirds.column
            ul
                for session in sessions
                    li
                        a(href="#{BASE_URL}sessions/#{session.id}/feed")
                            | #{session.getDisplayName()}

                        small.session-details
                                //- |  #{session.visualizations.length} visualizations 
                                //- | |
                                |  Created #{moment(session.createdAt).fromNow()}

    .row
        .four.columns
            a(href="#{BASE_URL}sessions/create")
                .button
                    | Create New Session

